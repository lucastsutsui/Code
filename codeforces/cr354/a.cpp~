#include <bits/stdc++.h>

int main ()
{
  int n;
  int v[123];
  int maxi, mini;

  cin >> n;

  maxi = 0;
  mini = 0;
  for (int i = 0; i < n; i++){
    cin >> v[i];
    if (v[i] > v[maxi])
      maxi = i;
    else if (v[i] < v[mini])
      mini = i;
  }

  if (maxi > mini){
    if (n-maxi > mini) cout << n-mini << endl;
    else cout << maxi << endl;
  }
  else{
    if (n-mini > maxi) cout << n-maxi << endl;
    else cout << mini << endl;
  }

  return 0;
}
