#include <iostream>
#include <stdio.h>
#define max(a,b) (((a) > (b))? (a) : (b))
#define min(a,b) (((a) > (b))? (b) : (a))
using namespace std;

typedef long long int lld;

int main ()
{
  int n, imp=-1, num;
  lld sum=0;

  cin >> n;

  for (int i = 0; i < n; i++){
    cin >> num;
    if (imp = -1 && num%2 == 1)
      imp = num;
    else if (num%2 == 1){
      sum += max (imp, num);
      imp = min (imp, num);
    }
    else sum += v[i];
  }

  cout << sum << endl;

  return 0;
}
